<div class="col-md-offset-1 col-md-4">
  <h1>Search</h1>
    <%= form_tag(do_search_courses_path, method: "get", remote: true, role: "form", class: "form", id: "search") do %>

      <div class="form-group">
        <label>Subject:</label>
        <%= select_tag(:subject, content_tag(:option,'All Subjects...',:value=>"")+options_from_collection_for_select(Subject.all, :id, :get_subject_name, :prompt => true), class: "form-control") %>
      </div>

      <div class="form-group">
        <label>Course Name:</label>
        <%= text_field_tag(:cour, "", class: "form-control") %>
      </div>

    <% end %>
</div>
<div class="row col-md-offset-1 col-md-11">
  <div id="search_results">
  </div>
</div>
