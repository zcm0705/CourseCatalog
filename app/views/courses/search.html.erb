<div class="col-md-offset-1 col-md-4">
  <h1>Search</h1>
    <%= form_tag(do_search_courses_path, method: "get", remote: true, role: "form", class: "form") do %>

      <div class="form-group">
        <label>Subject:</label>
        <%= select_tag(:subject, options_for_select(@subjects), class: "form-control") %>
      </div>

      <div class="form-group">
        <label>Course Name:</label>
        <%= text_field_tag(:cour, "", class: "form-control") %>
      </div>

      <%= submit_tag("Search", class: "btn btn-default" ) %>
    <% end %>
</div>
<div class="row col-md-offset-1 col-md-11">
  <div id="search_results">
  </div>
</div>
